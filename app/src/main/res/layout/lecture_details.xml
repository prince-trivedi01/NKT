<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context=".LectureDetails">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/TextViewLectureDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ld"
            android:textSize="40dp"
            />


    <android.support.v7.widget.AppCompatTextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/appCompatTextViewBranch"
        android:hint="@string/hint_bd"
        android:textSize="20sp"
        android:padding="25dp"
        />

        <android.support.v7.widget.AppCompatTextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/appCompatTextViewSemester"
            android:hint="@string/hint_sd"
            android:textSize="20sp"
            android:padding="20dp"
            />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_time"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_subject"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>



        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonTeacherLectureD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:onClick="SubmitLectureDetails"
            android:background="@color/colorTextHint"
            android:text="@string/submit" />

 </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>